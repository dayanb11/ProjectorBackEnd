# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/projector_db?sslmode=require"

# Alternative database configuration (if not using DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=projector_db
# DB_USER=username
# DB_PASSWORD=password
# DB_SSL=true

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-at-least-32-characters-long"
REFRESH_SECRET="your-super-secure-refresh-secret-at-least-32-characters-long-and-different"
ACCESS_TOKEN_TTL="15m"
REFRESH_TOKEN_TTL="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"
PUBLIC_URL="http://localhost:3000"

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Logging Configuration
LOG_LEVEL="info"

# Optional: Connection pooling (if using PgBouncer)
# DATABASE_URL="postgresql://username:password@localhost:6543/projector_db?sslmode=require&pgbouncer=true"